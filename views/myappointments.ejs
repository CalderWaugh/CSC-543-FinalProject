

<%- include('partials/head') %>

<div class="content">
    <div style="padding-top: 50px;text-align: center;" class="container">
        <h3>My Appointments</h3>
        <div class="table-container">
            <table class="table styler">
                <thead>
                    <th><%= appUserType.charAt(0).toUpperCase()+appUserType.slice(1) %></th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                </thead>
                <% myApt.forEach(function(appointment) { %>
                <tr>
                    <td><%= appointment.first_name %> <%= appointment.last_name %></td>
                    <td><%= appointment.date.toLocaleDateString() %></td>
                    <td><%= appointment.date.toLocaleString('en-US', { hour: 'numeric', hour12: true }) %></td>
                    <td><%= appointment.status %></td>
                </tr>
                <% }); %>
            </table>
        </div>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>

