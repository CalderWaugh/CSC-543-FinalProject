<%- include('partials/head') %>

      <div class="content">
        <div style="padding-top: 50px;text-align: center;" class="container">
          <h2>Welcome to Appointment Center!</h2>
          <p style="margin: 20px;"><em>What we have to offer:</em></p>
          <div class="container">
            <div class="row d-flex justify-content-center">
              <% if (!current_user.logged_in) { %>
              <div class="col-2">
                <div class="card styler">
                  <div class="card-body">
                    <h5 class="card-title">Login System</h5>
                    <p class="card-text">A secure system to login and check your appointments.</p>
                    <a href="/login" class="btn btn-primary">Log In</a>
                  </div>
                </div>
              </div>
              <% } %>
              <div class="col-3">
                <div class="card styler">
                  <div class="card-body">
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">View available appointment times, create new appointments, and view your upcomming appointments.</p>
                    <% if (current_user.logged_in) { %>
                      <a href="/myappointments" class="btn btn-primary">My Appointments</a>
                    <% } else { %>
                      <a href="/login" class="btn btn-primary">My Appointments</a>
                    <% } %>
                  </div>
                </div>
              </div>
              <div class="col-2">
                <div class="card styler">
                  <div class="card-body">
                    <h5 class="card-title">Doctors</h5>
                    <p class="card-text">View the various doctors in our database.</p>
                    <% if (current_user.logged_in) { %>
                      <a href="/doctor_search" class="btn btn-primary">View</a>
                    <% } else { %>
                      <a href="/login" class="btn btn-primary">View</a>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
