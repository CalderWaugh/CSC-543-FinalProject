<%- include('partials/head') %>

<div class="content">
    <div style="padding-top: 50px;text-align: center;" class="container justify-content-center">
      <h3><%= user_type.charAt(0).toUpperCase()+user_type.slice(1) %> Sign Up</h3>
      <div class="d-flex justify-content-center" style="margin-top: 15px;">
        <div class="card styler">
          <div class="card-body">
            <form action="/signup/<%= user_type %>" method="POST">
              <div class="row d-flex form-input">
                  <div class="col">
                      <label for="username">Username:</label>
                  </div>
                  <div class="col">
                      <input type="text" id="username" name="username" maxlength="20" minlength="6">
                  </div>
              </div>
                <div class="row d-flex form-input">
                    <div class="col">
                        <label for="first_name">First name:</label>
                    </div>
                    <div class="col">
                        <input type="text" id="first_name" name="first_name">
                    </div>
                </div>
                <div class="row d-flex form-input">
                    <div class="col">
                        <label for="last_name">Last name:</label>
                    </div>
                    <div class="col">
                        <input type="text" id="last_name" name="last_name">
                    </div>
                </div>
                <div class="row d-flex form-input">
                    <div class="col">
                        <label for="password">Password:</label>
                    </div>
                    <div class="col">
                        <input type="password" id="password" name="password" maxlength="20" minlength="6">
                    </div>
                </div>
                <div class="row d-flex justify-content-center form-input">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                </div>
            </form>
            <p><%= message %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
