
<%- include('partials/head') %>

<div class="content">
    <div style="padding-top: 50px;text-align: center;" class="container justify-content-center">
      <h3><%= user_type.charAt(0).toUpperCase()+user_type.slice(1) %> Login</h3>
      <div class="d-flex justify-content-center" style="margin-top: 15px;">
        <div class="card styler">
          <div class="card-body">
            <form action="/login/<%= user_type %>" method="POST">
                <div class="row d-flex form-input">
                    <div class="col">
                        <label for="username">Username:</label>
                    </div>
                    <div class="col">
                        <input type="text" id="username-input" name="username">
                    </div>
                </div>
                <div class="row d-flex form-input">
                    <div class="col">
                        <label for="password">Password:</label>
                    </div>
                    <div class="col">
                        <input type="password" id="password" name="password">
                    </div>
                </div>
                <div class="row d-flex justify-content-center form-input">
                    <div class="col">
                        <input type="submit" value="Login" class="btn btn-primary">
                    </div>
                </div>
            </form>
          </div>
          <p class="error-msg"><%= message %></p>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
  <script src="js/login.js"></script>
</body>
</html>
